<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button styles and shapes -->

    <!-- This button style is used for the buttons in the map -->
    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item> <!-- Overwrites the custom theme -->
        <item name="android:background">@drawable/round_button</item>
    </style>

    <!-- This button style is used for the profile buttons and the create event buttons -->
    <style name="OvalButtons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item> <!-- Overwrites the custom theme -->
        <item name="android:background">@drawable/oval_button</item>
    </style>




</resources>