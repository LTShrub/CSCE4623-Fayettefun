<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/gradient_background">

        <ImageButton
            android:id="@+id/barButton"
            android:layout_width="169dp"
            android:layout_height="161dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/oval_button_white"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/beer" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BARS"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/barButton"
        app:layout_constraintStart_toStartOf="@+id/barButton"
        app:layout_constraintTop_toBottomOf="@+id/barButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FOOD"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/foodButton"
        app:layout_constraintStart_toStartOf="@+id/foodButton"
        app:layout_constraintTop_toBottomOf="@+id/foodButton" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FITNESS"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fitnessButton"
        app:layout_constraintStart_toStartOf="@+id/fitnessButton"
        app:layout_constraintTop_toBottomOf="@+id/fitnessButton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PARTY"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/partyButton"
        app:layout_constraintStart_toStartOf="@+id/partyButton"
        app:layout_constraintTop_toBottomOf="@+id/partyButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GREEK"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/greekButton"
        app:layout_constraintStart_toStartOf="@+id/greekButton"
        app:layout_constraintTop_toBottomOf="@+id/greekButton" />

        <ImageButton
            android:id="@+id/natureButton"
            android:layout_width="169dp"
            android:layout_height="161dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/oval_button_white"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/outdoors" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NATURE"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/natureButton"
        app:layout_constraintStart_toStartOf="@+id/natureButton"
        app:layout_constraintTop_toBottomOf="@+id/natureButton" />

        <ImageButton
            android:id="@+id/foodButton"
            android:layout_width="0dp"
            android:layout_height="161dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/oval_button_white"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="@+id/barButton"
            app:layout_constraintStart_toStartOf="@+id/barButton"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:srcCompat="@drawable/eat" />

    <ImageButton
        android:id="@+id/fitnessButton"
        android:layout_width="0dp"
        android:layout_height="161dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/natureButton"
        app:layout_constraintStart_toStartOf="@+id/natureButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:background="@drawable/oval_button_white"
        app:srcCompat="@drawable/fitness" />

    <ImageButton
        android:id="@+id/partyButton"
        android:layout_width="0dp"
        android:layout_height="161dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/foodButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foodButton"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:background="@drawable/oval_button_white"
        app:srcCompat="@drawable/party" />

    <ImageButton
        android:id="@+id/greekButton"
        android:layout_width="0dp"
        android:layout_height="161dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oval_button_white"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/fitnessButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fitnessButton"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/omega" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FILTER"
            android:textAlignment="center"
            android:textSize="96sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
