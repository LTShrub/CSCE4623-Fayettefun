<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    tools:context=".View.Profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="@drawable/gradient_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#303F9F"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/user_profile_box"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/picture_holder"
            android:layout_gravity="center_horizontal">
        </ImageView>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lionel Andres Messi"
            android:textSize="20sp"
            android:textColor="@color/charcoal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">
        </TextView>

        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Argentine football prodigy, rose from humble beginnings to become a record-breaking Barcelona legend."
            android:textSize="15sp"
            android:textColor="@color/charcoal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp">
        </TextView>
    </LinearLayout>



</LinearLayout>
